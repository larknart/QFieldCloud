# ===========================================
# QFieldCloud - Coolify Environment Variables
# ===========================================
# Internal PostgreSQL + External SeaweedFS

# -------------------------------------------
# Core Settings
# -------------------------------------------
DEBUG=0
ENVIRONMENT=production
COMPOSE_PROJECT_NAME=qfieldcloud

# Your domain (Coolify will assign)
QFIELDCLOUD_HOST=qfield.yourdomain.com

# Security keys (generate with: openssl rand -hex 32)
SECRET_KEY=CHANGE_ME_USE_OPENSSL_RAND_HEX_32
SALT_KEY=CHANGE_ME_USE_OPENSSL_RAND_HEX_32

# -------------------------------------------
# Internal PostgreSQL
# -------------------------------------------
POSTGRES_USER=qfieldcloud
POSTGRES_PASSWORD=qfieldcloud123
POSTGRES_DB=qfieldcloud_db

# -------------------------------------------
# SeaweedFS S3 Storage (External)
# -------------------------------------------
SEAWEEDFS_ENDPOINT=http://s3-wk8c4o0g40o4gokooooosc48.setiu.link:8333
SEAWEEDFS_ACCESS_KEY=your_seaweedfs_access_key
SEAWEEDFS_SECRET_KEY=your_seaweedfs_secret_key
SEAWEEDFS_BUCKET=qfieldcloud

# -------------------------------------------
# Localization
# -------------------------------------------
QFIELDCLOUD_DEFAULT_TIME_ZONE=Asia/Kuala_Lumpur
QFIELDCLOUD_DEFAULT_LANGUAGE=en

# -------------------------------------------
# Email (optional)
# -------------------------------------------
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_USE_TLS=False
