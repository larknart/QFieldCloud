# ===========================================
# QFieldCloud - Coolify Environment Variables
# ===========================================
# Configured for: Internal PostgreSQL + External SeaweedFS

# -------------------------------------------
# Core Settings
# -------------------------------------------
DEBUG=0
ENVIRONMENT=production
COMPOSE_PROJECT_NAME=qfieldcloud

# IMPORTANT: Generate secure random strings for these!
# Use: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_A_SECURE_KEY
SALT_KEY=CHANGE_ME_GENERATE_ANOTHER_KEY

# Your domain (what Coolify assigns)
QFIELDCLOUD_HOST=qfield.yourdomain.com

# -------------------------------------------
# Internal PostgreSQL (dalam container)
# -------------------------------------------
POSTGRES_USER=qfieldcloud
POSTGRES_PASSWORD=CHANGE_ME_SECURE_DB_PASSWORD
POSTGRES_DB=qfieldcloud_db

# -------------------------------------------
# SeaweedFS S3 Storage (External - setiu.link)
# -------------------------------------------
# Your SeaweedFS S3 endpoint
SEAWEEDFS_ENDPOINT=http://s3-wk8c4o0g40o4gokooooosc48.setiu.link:8333

# SeaweedFS credentials (configure in SeaweedFS admin)
SEAWEEDFS_ACCESS_KEY=your_seaweedfs_access_key
SEAWEEDFS_SECRET_KEY=your_seaweedfs_secret_key
SEAWEEDFS_BUCKET=qfieldcloud

# Storage configuration (JSON) - connects app to SeaweedFS
# NOTE: Replace the access_key and secret_key values after creating them in SeaweedFS
STORAGES={"default":{"BACKEND":"storages.backends.s3boto3.S3Boto3Storage","OPTIONS":{"access_key":"your_seaweedfs_access_key","secret_key":"your_seaweedfs_secret_key","bucket_name":"qfieldcloud","endpoint_url":"http://s3-wk8c4o0g40o4gokooooosc48.setiu.link:8333","region_name":"us-east-1","signature_version":"s3v4","addressing_style":"path"}}}

# -------------------------------------------
# Email (configure your SMTP)
# -------------------------------------------
EMAIL_HOST=smtp.yourdomain.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email_user
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# -------------------------------------------
# Localization
# -------------------------------------------
QFIELDCLOUD_DEFAULT_TIME_ZONE=Asia/Kuala_Lumpur
QFIELDCLOUD_DEFAULT_LANGUAGE=en

# -------------------------------------------
# Performance Tuning
# -------------------------------------------
GUNICORN_WORKERS=3
GUNICORN_THREADS=3
GUNICORN_TIMEOUT_S=300
GUNICORN_MAX_REQUESTS=300

# -------------------------------------------
# Optional: Sentry Error Tracking
# -------------------------------------------
SENTRY_DSN=

# -------------------------------------------
# Admin
# -------------------------------------------
QFIELDCLOUD_ADMIN_URI=admin/
